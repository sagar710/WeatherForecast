<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.WeatherDetailActivity"
    tools:showIn="@layout/activity_weather_detail"
    android:background="#90caf9">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/weather_detail_activity_text_view_date"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Date"
        android:textColor="@color/white"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/weather_detail_activity_text_view_city_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Place name"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    
    <!--<android.support.v7.widget.AppCompatTextView
        android:id="@+id/weather_detail_activity_text_view_max"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:textSize="36sp"
        android:text="Max"
        android:layout_below="@+id/weather_detail_activity_text_view_date"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/weather_detail_activity_text_view_min"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:text="Min"
        android:layout_below="@+id/weather_detail_activity_text_view_max"
        android:layout_alignLeft="@+id/weather_detail_activity_text_view_max"
        android:layout_alignStart="@+id/weather_detail_activity_text_view_max"/>-->

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/weather_detail_activity_image_view_type"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        android:layout_below="@+id/weather_detail_activity_text_view_date"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/weather_detail_activity_text_view_type"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:textSize="24sp"
        android:text="Type"
        android:textColor="@color/white"
        android:paddingLeft="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/weather_detail_activity_text_view_date"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/weather_detail_activity_text_view_max_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/weather_detail_activity_image_view_type"
        android:layout_alignLeft="@+id/weather_detail_activity_image_view_type"
        android:layout_alignStart="@+id/weather_detail_activity_image_view_type"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/weather_detail_activity_text_view_max"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:text="Max"
        android:layout_below="@+id/weather_detail_activity_text_view_type"
        android:layout_alignLeft="@+id/weather_detail_activity_text_view_type"
        android:layout_alignStart="@+id/weather_detail_activity_text_view_type"
        android:layout_alignTop="@+id/weather_detail_activity_text_view_max_text" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/weather_detail_activity_text_view_min_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/weather_detail_activity_text_view_max_text"
        android:layout_alignLeft="@+id/weather_detail_activity_image_view_type"
        android:layout_alignStart="@+id/weather_detail_activity_image_view_type"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/weather_detail_activity_text_view_min"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:textSize="24sp"
        android:text="Min"
        android:textColor="@color/white"
        android:layout_below="@+id/weather_detail_activity_text_view_max"
        android:layout_alignLeft="@+id/weather_detail_activity_text_view_max"
        android:layout_alignStart="@+id/weather_detail_activity_text_view_max"
        android:layout_alignTop="@+id/weather_detail_activity_text_view_min_text"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/weather_detail_activity_text_view_pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pressure"
        android:textColor="@color/white"
        android:layout_below="@+id/weather_detail_activity_text_view_min_text"
        android:layout_marginTop="30dp"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/weather_detail_activity_text_view_humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:textColor="@color/white"
        android:layout_below="@+id/weather_detail_activity_text_view_pressure"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/weather_detail_activity_text_view_wind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wind"
        android:textColor="@color/white"
        android:layout_below="@+id/weather_detail_activity_text_view_humidity"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textStyle="bold"/>
</RelativeLayout>