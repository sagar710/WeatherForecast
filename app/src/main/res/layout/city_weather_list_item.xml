<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/city_weather_data_list_item_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/city_weather_data_list_item_text_view_date"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/city_weather_data_list_item_image_view"
        android:layout_toRightOf="@+id/city_weather_data_list_item_image_view"
        android:text="Date"
        android:textSize="18sp"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/city_weather_data_list_item_text_view_type"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/city_weather_data_list_item_text_view_date"
        android:layout_alignStart="@+id/city_weather_data_list_item_text_view_date"
        android:layout_below="@+id/city_weather_data_list_item_text_view_date"
        android:text="Type"
        android:textSize="16sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/city_weather_data_list_item_text_view_max"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="Max"
        android:textSize="18sp"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/city_weather_data_list_item_text_view_min"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/city_weather_data_list_item_text_view_max"
        android:layout_alignStart="@+id/city_weather_data_list_item_text_view_max"
        android:layout_below="@+id/city_weather_data_list_item_text_view_max"
        android:text="Min"
        android:textSize="16sp" />
</RelativeLayout>